[credential "https://github.com"]
	helper = !/usr/bin/gh auth git-credential
[user]
	email = samjcoop13@gmail.com
	name = sammy-kablammy
[core]
	editor = nvim
[init]
	defaultBranch = main
[pull]
	rebase = false
[diff]
    tool = nvimdiff
    prompt = false
[merge]
    tool = nvimdiff
[commit]
    verbose = true
[alias]
    logpretty = "log --all --graph --decorate --oneline"
    logg = "log --all --graph --decorate --oneline"
    l = "log --all --graph --decorate --oneline"
    s = "status"
    ss = "status --short"
    dt = "difftool"
    f = "fetch"
    fs = "!f() { git fetch && git status; }; f"
    fss = "!f() { git fetch && git status --short; }; f"
    mt = "mergetool"
